[flake8]
ignore = E203, E266, W503, F403
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude = 
    # note if using precommit as this calls flake on a file, folder exclusions are ignored, use the exclude in the pre-commit
    .git,
    __pycache__,
    docs,
    build,
    dist,
    # the examples .py files are autogenerated from the notebooks
    axiomapy/examples/